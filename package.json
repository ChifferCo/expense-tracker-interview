{
  "name": "expense-tracker-interview",
  "version": "1.0.0",
  "description": "A simple expense tracking application built with React, TypeScript, Node.js, and SQLite.",
  "scripts": {
    "prepare": "husky",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:headed": "npx playwright test --headed",
    "test:e2e:report": "npx playwright show-report",
    "test:coverage": "npm run test:backend -- --coverage && npm run test:frontend -- --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChifferCo/expense-tracker-interview.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ChifferCo/expense-tracker-interview/issues"
  },
  "homepage": "https://github.com/ChifferCo/expense-tracker-interview#readme",
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "husky": "^9.1.7"
  },
  "main": "index.js",
  "dependencies": {
    "playwright": "^1.58.2",
    "playwright-core": "^1.58.2"
  }
}
